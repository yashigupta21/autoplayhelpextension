{
  "manifest_version": 3,
  "name": "AutoSkip Helper",
  "version": "1.0",
  "description": "Automatically skips ads, intros, and moves to next episodes.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.netflix.com/*",
    "*://*.primevideo.com/*",
    "*://*.hotstar.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.netflix.com/*",
        "*://*.primevideo.com/*",
        "*://*.hotstar.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}